<alps>
 <descriptor id="DoseSchedule" type="semantic" href="http://alps.io/schema.org/MedicalIntangible.xml">
  <doc format="html">
   A specific dosing schedule for a drug or supplement.
  </doc>

  <descriptor href="http://alps.io/schema.org/Thing.xml#additionalType"/>

  <descriptor href="http://alps.io/schema.org/MedicalEntity.xml#alternateName"/>

  <descriptor href="http://alps.io/schema.org/MedicalEntity.xml#code"/>

  <descriptor href="http://alps.io/schema.org/Thing.xml#description"/>

  <descriptor id="doseUnit" type="semantic">
   <doc format="html">
    The unit of the dose, e.g. 'mg'.
   </doc>
  </descriptor>

  <descriptor id="doseValue" type="semantic">
   <doc format="html">
    The value of the dose, e.g. 500.
   </doc>
  </descriptor>

  <descriptor id="frequency" type="semantic">
   <doc format="html">
    How often the dose is taken, e.g. 'daily'.
   </doc>
  </descriptor>

  <descriptor href="http://alps.io/schema.org/MedicalEntity.xml#guideline"/>

  <descriptor href="http://alps.io/schema.org/Thing.xml#image"/>

  <descriptor href="http://alps.io/schema.org/MedicalEntity.xml#medicineSystem"/>

  <descriptor href="http://alps.io/schema.org/Thing.xml#name"/>

  <descriptor href="http://alps.io/schema.org/MedicalEntity.xml#recognizingAuthority"/>

  <descriptor href="http://alps.io/schema.org/MedicalEntity.xml#relevantSpecialty"/>

  <descriptor href="http://alps.io/schema.org/MedicalEntity.xml#study"/>

  <descriptor id="targetPopulation" type="semantic">
   <doc format="html">
    Characteristics of the population for which this is intended, or which typically uses it, e.g. 'adults'.
   </doc>
  </descriptor>

  <descriptor href="http://alps.io/schema.org/Thing.xml#url"/>

 </descriptor>
</alps>