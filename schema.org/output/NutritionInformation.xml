<alps>
 <descriptor id="NutritionInformation" type="semantic" href="http://alps.io/schema.org/StructuredValue.xml">
  <doc format="html">
   Nutritional information about the recipe.
  </doc>

  <descriptor href="http://alps.io/schema.org/Thing.xml#additionalType"/>

  <descriptor id="calories" type="semantic">
   <doc format="html">
    The number of calories
   </doc>
  </descriptor>

  <descriptor id="carbohydrateContent" type="semantic">
   <doc format="html">
    The number of grams of carbohydrates.
   </doc>
  </descriptor>

  <descriptor id="cholesterolContent" type="semantic">
   <doc format="html">
    The number of milligrams of cholesterol.
   </doc>
  </descriptor>

  <descriptor href="http://alps.io/schema.org/Thing.xml#description"/>

  <descriptor id="fatContent" type="semantic">
   <doc format="html">
    The number of grams of fat.
   </doc>
  </descriptor>

  <descriptor id="fiberContent" type="semantic">
   <doc format="html">
    The number of grams of fiber.
   </doc>
  </descriptor>

  <descriptor href="http://alps.io/schema.org/Thing.xml#image"/>

  <descriptor href="http://alps.io/schema.org/Thing.xml#name"/>

  <descriptor id="proteinContent" type="semantic">
   <doc format="html">
    The number of grams of protein.
   </doc>
  </descriptor>

  <descriptor id="saturatedFatContent" type="semantic">
   <doc format="html">
    The number of grams of saturated fat.
   </doc>
  </descriptor>

  <descriptor id="servingSize" type="semantic">
   <doc format="html">
    The serving size, in terms of the number of volume or mass
   </doc>
  </descriptor>

  <descriptor id="sodiumContent" type="semantic">
   <doc format="html">
    The number of milligrams of sodium.
   </doc>
  </descriptor>

  <descriptor id="sugarContent" type="semantic">
   <doc format="html">
    The number of grams of sugar.
   </doc>
  </descriptor>

  <descriptor id="transFatContent" type="semantic">
   <doc format="html">
    The number of grams of trans fat.
   </doc>
  </descriptor>

  <descriptor id="unsaturatedFatContent" type="semantic">
   <doc format="html">
    The number of grams of unsaturated fat.
   </doc>
  </descriptor>

  <descriptor href="http://alps.io/schema.org/Thing.xml#url"/>

 </descriptor>
</alps>