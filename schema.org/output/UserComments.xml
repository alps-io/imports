<alps>
 <descriptor id="UserComments" type="semantic" href="http://alps.io/schema.org/UserInteraction.xml#UserInteraction">
  <doc format="html">
   The UserInteraction event in which a user comments on an item.
  </doc>

  <descriptor href="http://alps.io/schema.org/Thing.xml#additionalType"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#attendee"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#attendees"/>

  <descriptor id="commentText" type="semantic">
   <doc format="html">
    The text of the UserComment.
   </doc>
  </descriptor>

  <descriptor id="commentTime" type="semantic">
   <doc format="html">
    The time at which the UserComment was made.
   </doc>
  </descriptor>

  <descriptor id="creator" type="semantic">
   <doc format="html">
    The creator/author of this CreativeWork or UserComments. This is the same as the Author property for CreativeWork.
   </doc>
  </descriptor>

  <descriptor href="http://alps.io/schema.org/Thing.xml#description"/>

  <descriptor id="discusses" type="semantic">
   <doc format="html">
    Specifies the CreativeWork associated with the UserComment.
   </doc>
  </descriptor>

  <descriptor href="http://alps.io/schema.org/Event.xml#duration"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#endDate"/>

  <descriptor href="http://alps.io/schema.org/Thing.xml#image"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#location"/>

  <descriptor href="http://alps.io/schema.org/Thing.xml#name"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#offers"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#performer"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#performers"/>

  <descriptor id="replyToUrl" type="safe" rt="http://alps.io/schema.org/URL.xml">
   <doc format="html">
    The URL at which a reply may be posted to the specified UserComment.
   </doc>
  </descriptor>

  <descriptor href="http://alps.io/schema.org/Event.xml#startDate"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#subEvent"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#subEvents"/>

  <descriptor href="http://alps.io/schema.org/Event.xml#superEvent"/>

  <descriptor href="http://alps.io/schema.org/Thing.xml#url"/>

 </descriptor>
</alps>